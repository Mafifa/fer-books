---
import TwitterIco from "../../public/image/TwitterIco.astro";
import GitHubIco from "../../public/image/GitHubIco.astro";

let year = new Date();
---

<footer
  class="dark:text-white rounded-lg flex items-center justify-center shadow bg-gray-500/60 w-full absolute bottom-auto"
>
  <div
    class="w-full mx-auto rounded-lg shadow dark:bg-slate-900 bg-gray-200/10 max-w-screen-xl flex items-center justify-around py-2"
  >
    <span class="dark:text-white text-black text-center"
      >{year.getUTCFullYear()} Develop by <span
        class="text-blue-700 dark:text-red-600">Mafifa</span
      >
    </span>
    <ul class="flex items-center justify-center text-sm gap-3 font-medium">
      <li>
        <a
          href="https://twitter.com/Mafifa_Charlys"
          target="_blank"
          rel="nooperner noreferrer"
          class="flex
          justify-center
          items-center
          gap-x-2
          px-2
          text-base
          md:text-base
          md:px-4"
        >
          Mafifa <TwitterIco class="size-6" />
        </a>
      </li>
      <li>
        <a
          href="https://github.com/Mafifa"
          target="_blank"
          rel="nooperner noreferrer"
          class="flex
          justify-center
          items-center
          gap-x-2
          px-2
          text-base
          md:text-base
          md:px-4"
        >
          Mafifa <GitHubIco class="size-6" />
        </a>
      </li>
    </ul>
  </div>
</footer>
